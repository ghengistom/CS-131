//This program will copy a text and display it 

#include <iostream>
#include <fstream>
#include <string>

using namespace std;
//Display (int n);
//CopyData(int n, string f);

//=================================================================CREATE A CONTAINER========================================================
struct PERSON												//Create container to hold 3 variable types
{
	string name;
	int age;
	float gpa;

};
//=================================================================END PERSON CONTAINER========================================================

//=================================================================DISPLAY METHOD========================================================
void Display(PERSON T[6])
{
	//int x[6];
	for (int i = 0; i<6; ++i)
	{
		cout << T[i].name << "\t" << T[i].age << "\t" << T[i].gpa;
	}
}
//=================================================================END DISPLAY METHOD========================================================

//=================================================================COPY DATA METHOD========================================================
void CopyData(fstream f, int n)			//string	fstream
{
	//n=6;
	PERSON a[6];
	//int a[6];
	//fstream f;													//create object f using <fstream library>

	for (int i = 0; i<6; ++i)
	{
		f >> a[i].name >> a[i].age >> a[i].gpa;
	}
}
//=================================================================END COPY DATA METHOD========================================================

//=================================================================READ DATA========================================================
void ReadData(int x[], int n, string fname)
{
	fstream f;
	PERSON X;
	f.open("data.text", ios::in);								//call open function/method from fstream library it takes two parameters file name and namespace 

	for (int i = 0; i<6; ++i)
	{
		f >> X.name >> X.age >> X.gpa;
	}

	f.close();
}
//=================================================================END READ-DATA========================================================
//===================================================================BEGIN MAIN=======================================================
int main()
{

	PERSON g;										//create object which will store a string,int, and float in a container called "g"	
	int a[6];										//create an array of size six which will store elements of 
	ReadData(a, 6, "data.txt");						//call ReadData function which has 3 parameters 
	Display(g);
	//CopyData(a,6);									//call CopyData method which takes two parameters: file name and object
	//Display(a);

	//Display(a);

